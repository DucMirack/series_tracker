%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Series Tracker', series_path, class: "navbar-brand", id: "logo"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to 'Nouvelle série', new_serie_path
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li= link_to 'Modifier', edit_user_registration_path
          %li= link_to 'Se déconnecter', destroy_user_session_path, method: :delete
        - else
          %li= link_to 'Se connecter', new_user_session_path
          %li= link_to 'S\'inscire', new_user_registration_path
    / /.navbar-collapse
  / /.container-fluid
