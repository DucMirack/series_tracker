  .row
    .col-xs-8.col-xs-offset-2
      .well.well-lg
        .movie-title
          = link_to movie.title, movie_path(movie)
        .movie-body
          = truncate(movie.description, length: 100)
        .movie-actions
          = link_to "Modifier le film", edit_movie_path(movie), class: "btn btn-xs btn-primary"
